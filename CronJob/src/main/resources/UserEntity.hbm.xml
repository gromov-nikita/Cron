<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="models.entity.UserEntity" table="user" schema="users">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="firstName">
            <column name="firstName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="lastName">
            <column name="lastName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int"/>
        </property>
        <property name="birthdayDate">
            <column name="birthdayDate" sql-type="date"/>
        </property>
        <property name="lastLoginDate">
            <column name="lastLoginDate" sql-type="timestamp"/>
        </property>
        <property name="registrationDate">
            <column name="registrationDate" sql-type="date"/>
        </property>
    </class>

    <query name="users.moreThanLastLoginDate">
        <![CDATA[from UserEntity as u where u.lastLoginDate >= :lastLoginDate]]>
    </query>

    <query name="users.lessThanRegistrationDate">
        <![CDATA[from UserEntity as u where u.registrationDate <= :registrationDate]]>
    </query>

    <query name="users.byRegistrationDate">
        <![CDATA[from UserEntity as u where u.registrationDate = :registrationDate]]>
    </query>

</hibernate-mapping>